@model MusicApp.Models.ArtistsViewModel
@{
    ViewBag.Title = "DELETE ARTIST";
}

<h1>@ViewBag.Title</h1>
<h3>Are you sure you want to delete this artist?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ARTIST NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
        <dt class="col-sm-2">
            CREATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            UPDATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    <h4>Ablums</h4>
    <hr />
    @if (Model.Albums.Count == 0)
    {
        <tr>No Albums Found</tr>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ALBUM NAME
                    </th>
                    <th>
                        CREATED DATE
                    </th>
                    <th>
                        UPDATED DATE
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Albums)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AlbumName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
    </form>
</div>
