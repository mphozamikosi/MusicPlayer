@model MusicApp.Models.SongsViewModel
@{
    ViewBag.Title = "DELETE SONG";
}

<h1>@ViewBag.Title</h1>
<h3>Are you sure you want to delete this Song?</h3>
<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            SONG NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SongName)
        </dd>
        <dt class="col-sm-2">
            ALBUM NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.AlbumName)
        </dd>
        <dt class="col-sm-2">
            ARTIST NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Artist.ArtistName)
        </dd>
        <dt class="col-sm-2">
            CREATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            UPDATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
    </form>
</div>
