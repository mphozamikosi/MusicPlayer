@model MusicApp.Models.GenresViewModel
@{
    ViewBag.Title = "GENRE'S DETAIL";
}

<h1>@ViewBag.Title</h1>

<div>
    <h4>GENRE</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            GENRE NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenreName)
        </dd>
        <dt class="col-sm-2">
            CREATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            UPDATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    <br />

    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">EDIT</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
