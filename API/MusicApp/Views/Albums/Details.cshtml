@model MusicApp.Models.AlbumsViewModel


<h1>ALBUM'S DETAIL</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ALBUM NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumName)
        </dd>
        <dt class="col-sm-2">
            ARTIST NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.ArtistName)
        </dd>
        <dt class="col-sm-2">
            GENRE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.GenreName)
        </dd>
        <dt class="col-sm-2">
            CREATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            UPDATED DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    <br />
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img class="img-thumbnail" src="@Model.PhotoLocation" />

        </div>
    </div>
    <br />
    <h4>Songs</h4>
    <hr />
    @if (Model.Songs.Count == 0)
    {
        <tr>No Songs Found</tr>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        SONG NAME
                    </th>
                    <th>
                        CREATED DATE
                    </th>
                    <th>
                        UPDATED DATE
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Songs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SongName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    <br /><br />
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">EDIT</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
